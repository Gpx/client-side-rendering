{
  "compilerOptions": {
    "target": "es2017",
    "jsx": "react-jsx",
    "module": "es2015",
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src"]
}